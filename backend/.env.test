# Dummy TMDB key for tests (won't hit real API)
TMDB_API_KEY=dummy-test-key
DOWNLOAD_PATH=/var/www/media/downloads

# Django settings
DEBUG=True
DJANGO_SECRET_KEY=test-secret-key
DJANGO_ALLOWED_HOST=*
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost

# PostgreSQL (if you test against a real DB in CI; otherwise skip)
POSTGRES_DB=testdb
POSTGRES_USER=testuser
POSTGRES_PASSWORD=testpass
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Static/media paths (not strictly needed unless your app references them)
MEDIA_URL=/media/
MEDIA_ROOT=/app/media/
STATIC_URL=/static/
STATIC_ROOT=/app/static/

# CORS (make it lenient in tests)
CORS_ALLOWED_ORIGINS=http://localhost
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_ALL_ORIGINS=True
